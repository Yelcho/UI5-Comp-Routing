<mvc:View controllerName="yelcho.mydemo.comprouting.controller.Dealers" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns="sap.m" 
  displayBlock="true">
  <!-- <MessagePage title="{i18n>homePageTitle} {/Name}" text="This is the {i18n>homePageTitle} view" enableFormattedText="true" description="Welcome Home {FullName}" icon="sap-icon://home">
    <buttons>
      <Button text="Nav to reuse component 1" press=".toReuseComp1" />
      <Button text="Nav to reuse component 2" press=".toReuseComp2" />
    </buttons>
  </MessagePage> -->
  <Page id="page" 
    showHeader="false" 
    enableScrolling="true">
    <Table inset="false" 
      busyIndicatorDelay="0" 
      items="{Dealers}">
      <headerToolbar>
        <OverflowToolbar>
          <content>
            <Title text="Dealers" 
              level="H2" />
            <ToolbarSpacer />
          </content>
        </OverflowToolbar>
      </headerToolbar>
      <columns>
        <Column width="12em">
          <Text text="Id" />
        </Column>
        <Column minScreenWidth="Tablet" 
          demandPopin="true">
          <Text text="Name" />
        </Column>
        <Column minScreenWidth="Desktop" 
          demandPopin="true" 
          hAlign="End">
          <Text text="Street" />
        </Column>
        <Column minScreenWidth="Desktop" 
          demandPopin="true" 
          hAlign="Center">
          <Text text="City" />
        </Column>
        <Column minScreenWidth="Desktop" 
          demandPopin="true" 
          hAlign="Center">
          <Text text="Postcode" />
        </Column>
      </columns>
      <items>
        <ColumnListItem type="Navigation" 
          press="onPressDealer">
          <cells>
            <Text text="{Id}" />
            <Text text="{Name}" />
            <Text text="{Street}" />
            <Text text="{City}" />
            <Text text="{PostCode}" />
          </cells>
        </ColumnListItem>
      </items>
    </Table>
  </Page>
</mvc:View>