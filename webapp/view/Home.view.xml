<mvc:View controllerName="yelcho.mydemo.comprouting.controller.Home" 
  xmlns:mvc="sap.ui.core.mvc" 
  xmlns="sap.m" 
  displayBlock="true">
  <MessagePage title="{i18n>homePageTitle}" 
    text="This is the {i18n>homePageTitle} view" 
    enableFormattedText="true" 
    description="Welcome Home {/recipient/name}" 
    icon="sap-icon://home">
    <buttons>
      <Button text="Nav to reuse component 1" 
        press=".toReuseComp1" />
      <Button text="Nav to reuse component 2" 
        press=".toReuseComp2" />
    </buttons>
  </MessagePage>
</mvc:View>